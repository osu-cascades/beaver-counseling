          <div class="col-md-1 mb-3"></div>
          <div class="col-md-10 mb-3">
            <label for="howReferred">How Were You Referred To The Clinic?</label>
            <%= form.text_field :how_referred, id: :client_how_referred, placeholder: "", class: "form-control" %>
